<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/skeleton/2.0.4/skeleton.min.css">
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
   
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>

<body>
    <div>
         <a class="col-lg-2" href="/users/logout">Logout</a><br>
           <i class="fa-regular fa-user col-lg-4"></i>
         <h4><%= user %>
         </h4>
    </div>
    <div class="container">
        <h1 class="mb-8 text-center ">Welcome to THEBLOGGER</h1>
        <a href="/articles/aman" class="btn btn-primary">Create a post</a>
        <h1 class="mb-4">Welcome, <%= user %>
        </h1>
        <% if (articles.length> 0) { %>
            <ul>
                <% articles.forEach(article=> { %>
                    <div>
                        <li class="card title ">
                            <h3 >
                                <%= article.title %>
                            </h3>
                            <p class="card-text">
                                <%= article.description %>
                            </p>
                            <p class="card-text">
                                <%= article.markdown %>
                            </p>
                             <form action="articles/<%article.id%> ?_method=DELETE" method="POST" class="d-inline">
                                <a href="articles/<%=article.id%>" class="btn btn-primary">Readmore</a>
                                <a type="submit" class="btn btn-danger"> Delete </a>
                             </form>
                            <p><em>Created Time: <%= new Date(article.created_at).toLocaleString() %></em>, Created by <%= user %></p>
                        </li>
                        <% }) %>
            </ul>
            <% } else { %>
                <p>No articles found.</p>
                <% } %>
    </div>
    </div>
</body>
</html>