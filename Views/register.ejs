<!DOCTYPE html>
<html lang="en">
<head>  
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <!-- <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/skeleton/2.0.4/skeleton.min.css"> -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
</head>
<body> 
    <div class=".container-lg col-md-2 offset-md-5">
        <h1 class="mb-5 container-fluid col-md-10">Register</h1>

          <!-- form validation -->
    <ul>
        <% if (typeof errors != 'undefined') { %> <% errors.forEach(error => { %>
           <li><%= error.message %></li>
        <% }) %> <% } %>
    </ul>


    <!--  form data -->
    <form action="/users/register" method="POST">
        <div>
            <input type="text" class="mb-3 col-md-12 form-control" id="name" name="name" placeholder="Name" required>
        </div>
        <div>
            <input type="email" id="email" class="mb-3 col-md-12 form-control" name="email" placeholder="email" required>
        </div>
        <div>
            <input type="password" id="password" class="mb-3 col-md-12 form-control" name="password" placeholder="password" required>
        </div>
        <div>
            <input type="password" id="password2" class="mb-3 col-md-12 form-control" name="password2" placeholder="confirm password" required>
        </div>
        <div>
            <input type="Submit" class="btn btn-primary col-md-12 mb-3" value="Register">
        </div>
        <a href="/users/login" class="btn btn-danger col-md-12 mb-3">Already Register</a>
    </form>
    </div>
</body>
</html>